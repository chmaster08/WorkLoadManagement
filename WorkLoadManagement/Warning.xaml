<Window x:Class="WorkLoadManagement.Warning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkLoadManagement"
        mc:Ignorable="d"
        Title="Warning" Height="250" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding ErrorMsg}" Height="80" Width="200" FontSize="10" Grid.Row="0" HorizontalAlignment="Center" Margin="0,10,0,0"></TextBlock>
        <Button Name="message" Content="OK" Click="Btn_OKClick" Grid.Row="1" HorizontalAlignment="Center" Margin="127,0,119,19" VerticalAlignment="Bottom" Height="39" Width="96" ></Button>

    </Grid>
</Window>
