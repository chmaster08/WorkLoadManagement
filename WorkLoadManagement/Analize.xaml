<Window x:Class="WorkLoadManagement.Analize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkLoadManagement"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:wtk = "clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        mc:Ignorable="d"
        Title="Analize" Height="450" Width="700" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="0.1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>

        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Path=PresentMonth}" FontSize="18" Grid.Column="1" Grid.Row="1"></TextBlock>
        <TextBlock Text="の開発コード別工数" FontSize="15" Grid.Column="1" Grid.Row="1"></TextBlock>

        <ListView Grid.Column="1" Grid.Row="2"  Height="154" Width="199" ItemsSource="{Binding MonthlyWorkData}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="WorkCode" DisplayMemberBinding="{Binding Path=Key}" Width="100"/>
                    <GridViewColumn Header="WorkTime" DisplayMemberBinding="{Binding Path=Value}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock Text="全工数" FontSize="15" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left"></TextBlock>

        <ListView Grid.Column="2" Grid.Row="2" Height="156" Width="327" ItemsSource="{Binding WorkDataList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Path=StartTime,StringFormat={}{0:yyyy/MM/dd}}" Width="75"/>
                    <GridViewColumn Header="WorkCode" DisplayMemberBinding="{Binding Path=workCode}" Width="70"/>
                    <GridViewColumn Header="Start" DisplayMemberBinding="{Binding Path=StartTime,StringFormat={}{0:HH:mm}}" Width="40"/>
                    <GridViewColumn Header="End" DisplayMemberBinding="{Binding Path=EndTime,StringFormat={}{0:HH:mm}}" Width="40"/>
                    <GridViewColumn Header="Comment" DisplayMemberBinding="{Binding Path=Comment}" Width="80"/>
                </GridView>
            </ListView.View>
        </ListView>


        <oxy:PlotView Model="{Binding _PlotModel, Mode=OneWay}" Margin="74.667,225,54.667,10" Grid.Column="2" Grid.Row="2"/>

        <ListBox x:Name="TodayBox" Grid.Column="1" Grid.Row="4" Width="250" Height="180">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="AliceBlue" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">

                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
